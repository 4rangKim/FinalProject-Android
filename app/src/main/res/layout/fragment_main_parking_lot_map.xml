<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#434343"
    android:padding="20dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:id="@+id/currentLocation"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/target"
            android:padding="2dp"
            android:background="@drawable/btn6"
            android:contentDescription="@string/string_image_fail"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp">
            <ImageView
                android:layout_marginStart="10dp"
                android:id="@+id/zoomOut"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/map_plus"
                android:background="@drawable/btn6"
                android:padding="5dp"
                android:contentDescription="@string/string_image_fail"/>
            <ImageView
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/zoomIn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/map_minus"
                android:background="@drawable/btn6"
                android:padding="5dp"
                android:contentDescription="@string/string_image_fail"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn9">
            <Spinner
                android:padding="5dp"
                android:id="@+id/mapSelectMarker"
                android:layout_width="150dp"
                android:layout_height="50dp"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>