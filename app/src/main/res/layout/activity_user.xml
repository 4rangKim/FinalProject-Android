<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserActivity"
    android:background="#434343"
    android:gravity="center">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#434343"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/goSignIn"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/back_btn"
                    android:layout_margin="10dp"
                    android:onClick="goMain"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="5dp"
                    android:gravity="end">
                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:src="@drawable/logo_text"
                        android:contentDescription="@string/string_image_fail"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/user_bg"
                    android:layout_marginTop="55dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="55dp">
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_activity_content_user_name"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                        <TextView
                            android:id="@+id/userId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_activity_content_user_id"
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="10dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:id="@+id/myCarImage"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/point"
                                    android:layout_margin="8dp"
                                    android:contentDescription="@string/string_image_fail"/>
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_gravity="right"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/user_activity_content_user_point"
                                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                        android:textStyle="bold"
                                        android:padding="3dp"
                                        tools:ignore="RtlHardcoded,TooDeepLayout" />
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="end">
                                        <TextView
                                            android:id="@+id/userPoint"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/user_activity_content_user_point_value"
                                            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                                        <TextView
                                            android:layout_marginStart="10dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/user_activity_content_user_point_value_unit"
                                            android:layout_marginEnd="8dp"/>
                                    </LinearLayout>

                                </LinearLayout>
                            </LinearLayout>
                            <!-- line -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginHorizontal="10dp"
                                android:background="#aaa"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="15dp"
                                tools:ignore="UseCompoundDrawables">
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/user_car"
                                    android:padding="3dp"
                                    android:contentDescription="@string/string_image_fail"/>
                                <TextView
                                    android:layout_marginStart="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/user_activity_content_user_car"
                                    android:padding="3dp"
                                    android:textStyle="bold"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>
                            </LinearLayout>
                            <androidx.recyclerview.widget.RecyclerView
                                android:layout_gravity="center"
                                android:id="@+id/userCarList"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/btn4"
                    android:layout_margin="10dp">
                    <ImageView
                        android:id="@+id/logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/logo_content"
                        android:layout_margin="10dp"
                        android:contentDescription="@string/string_image_fail"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>