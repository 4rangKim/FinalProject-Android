<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#434343">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/btn3"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo_content"
                android:layout_margin="10dp"
                android:onClick="goMyPage"
                android:contentDescription="@string/string_image_fail"/>
        </LinearLayout>
        <TextView
            android:id="@+id/signInMemberId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_drawer_header_content_user_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_drawer_header_content_user_name_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#434343"
        android:orientation="vertical"
        android:elevation="10dp"
        android:clipToPadding="false"
        android:paddingBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#434343"
            android:elevation="10dp"
            android:clipToPadding="false"
            android:paddingBottom="5dp"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/pointImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/point"
                    android:contentDescription="@string/string_image_fail"/>
            </LinearLayout>
            <TextView
                android:id="@+id/point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/main_drawer_header_content_user_point"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="1dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/pointVal"
                    android:hint="@string/main_drawer_header_content_user_point_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_drawer_header_content_user_point_value_unit"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:layout_marginStart="5dp"
                    android:gravity="center|end" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/goCharge"
                    android:onClick="goCharge"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/main_drawer_header_content_go_charge_point_btn"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#f7c873"
                    android:background="@drawable/btn1"
                    android:layout_marginEnd="20dp" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#434343"
            android:elevation="10dp"
            android:clipToPadding="false"
            android:paddingBottom="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="10dp">
                <ImageView
                    android:id="@+id/carImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:src="@drawable/car"
                    android:contentDescription="@string/string_image_fail"/>
            </LinearLayout>
            <TextView
                android:id="@+id/car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/main_drawer_header_content_user_car"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="1dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:onClick="myCarMenu"
                    android:layout_alignParentEnd="true"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="@string/main_drawer_header_content_go_my_car_list"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#f7c873"
                    android:background="@drawable/btn1"
                    android:layout_marginEnd="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>