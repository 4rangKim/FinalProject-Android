<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PayResultActivity"
    android:background="#434343">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#434343"
        android:elevation="10dp"
        android:clipToPadding="false"
        android:paddingBottom="5dp">
        <Button
            android:id="@+id/goSignIn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_btn"
            android:layout_margin="10dp"
            android:onClick="goMain"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:gravity="end">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:src="@drawable/logo_text"
                android:contentDescription="@string/string_image_fail"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pay_result_activity_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <View
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_width="165dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#ffffff"
            android:layout_marginBottom="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_result_activity_content_in_time"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="5dp"
                android:paddingStart="3dp"
                android:layout_marginEnd="10dp"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:gravity="center"
                android:id="@+id/inTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_result_activity_content_in_time_value"
                android:inputType="text"
                android:focusableInTouchMode="false"
                android:autofillHints="inTime"
                tools:ignore="LabelFor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_result_activity_content_out_time"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="5dp"
                android:paddingStart="3dp"
                android:layout_marginEnd="10dp"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:gravity="center"
                android:id="@+id/outTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_result_activity_content_out_time_val"
                android:inputType="text"
                android:focusableInTouchMode="false"
                android:autofillHints="outTime"
                tools:ignore="LabelFor" />
        </LinearLayout>
        <View
            android:layout_marginTop="2dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#ffffff"
            android:layout_marginBottom="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_result_activity_content_cost"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="5dp"
                android:paddingStart="3dp"
                android:layout_marginEnd="10dp"
                tools:ignore="RtlSymmetry" />
            <EditText
                android:gravity="center"
                android:id="@+id/cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pay_result_activity_content_cost_val"
                android:inputType="text"
                android:focusableInTouchMode="false"
                android:autofillHints="cost"
                tools:ignore="LabelFor" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>